{
  "name": "chiroclickcrm-backend",
  "version": "1.0.0",
  "description": "ChiroClickCRM Backend API - Norwegian-compliant EHR-CRM system",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "migrate": "node database/migrations/run.js",
    "migrate:critical": "psql -U $DB_USER -d $DB_NAME -f migrations/011_audit_logging.sql && psql -U $DB_USER -d $DB_NAME -f migrations/012_ai_feedback_system.sql && psql -U $DB_USER -d $DB_NAME -f migrations/013_clinical_notes_versioning.sql && psql -U $DB_USER -d $DB_NAME -f migrations/014_template_quality_governance.sql && psql -U $DB_USER -d $DB_NAME -f migrations/015_performance_indexes.sql",
    "seed": "node database/seeds/run.js",
    "backup": "./scripts/backup-database.sh",
    "test": "jest --coverage",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:unit": "jest --testPathPattern=tests/unit",
    "lint": "eslint src/**/*.js",
    "quality:score-templates": "node scripts/scoreTemplates.js",
    "ai:update-metrics": "psql -U $DB_USER -d $DB_NAME -c 'SELECT update_daily_ai_metrics();'"
  },
  "keywords": [
    "ehr",
    "crm",
    "chiropractic",
    "healthcare",
    "norwegian"
  ],
  "author": "ChiroClickCRM",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-secrets-manager": "^3.470.0",
    "@azure/identity": "^4.0.0",
    "@azure/keyvault-secrets": "^4.7.0",
    "@clerk/clerk-sdk-node": "^4.13.14",
    "axios": "^1.6.2",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "crypto-js": "^4.2.0",
    "date-fns": "^2.30.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "googleapis": "^128.0.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mammoth": "^1.6.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-vault": "^0.10.2",
    "nodemailer": "^6.9.7",
    "pdf-parse": "^1.1.1",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1",
    "winston": "^3.18.3",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
