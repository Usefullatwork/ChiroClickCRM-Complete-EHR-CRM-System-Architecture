# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=chiroclickcrm
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_POOL_MIN=2
DB_POOL_MAX=10

# Database SSL Configuration
# In production (NODE_ENV=production): SSL is always enabled with certificate verification
# In development: Set DB_SSL=true to enable SSL for testing
DB_SSL=false
# Path to CA certificate file (required in production, optional in development)
# SSL_CA_PATH=/path/to/ca-certificate.crt
# Set to 'false' only in development to skip certificate verification (not recommended)
# SSL_REJECT_UNAUTHORIZED=true

# Authentication (Clerk.com)
CLERK_PUBLISHABLE_KEY=pk_test_your_key_here
CLERK_SECRET_KEY=sk_test_your_key_here
CLERK_WEBHOOK_SECRET=whsec_your_secret_here

# JWT (for internal tokens)
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_EXPIRES_IN=24h

# Encryption (for sensitive data like f√∏dselsnummer)
ENCRYPTION_KEY=your_32_character_encryption_key_here_change_this
ENCRYPTION_ALGORITHM=aes-256-cbc

# SMS Integration (Telnyx)
TELNYX_API_KEY=your_telnyx_api_key_here
TELNYX_FROM_NUMBER=+47xxxxxxxxxx
TELNYX_WEBHOOK_SECRET=your_telnyx_webhook_secret

# Email Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_email_password
SMTP_FROM_NAME=ChiroClickCRM
SMTP_FROM_EMAIL=noreply@chiroclickcrm.no

# SolvIt Integration (External EHR)
SOLVIT_API_URL=https://api.solvit.no/v1
SOLVIT_API_KEY=your_solvit_api_key
SOLVIT_WEBHOOK_SECRET=your_solvit_webhook_secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:5173

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Feature Flags
FEATURE_SMS_ENABLED=true
FEATURE_EMAIL_ENABLED=true
FEATURE_AUTO_RECALLS=true
FEATURE_ONLINE_BOOKING=true

# Norwegian Compliance
TIMEZONE=Europe/Oslo
DEFAULT_LANGUAGE=NO
GDPR_DATA_RETENTION_YEARS=10

# File Storage (for temporary PDFs)
TEMP_FILE_PATH=./temp
PDF_GENERATOR_TIMEOUT_MS=30000

# AI Integration (Ollama or Claude)
AI_PROVIDER=ollama
AI_MODEL=gemini-3-pro-preview:7b
OLLAMA_BASE_URL=http://localhost:11434
CLAUDE_API_KEY=your_claude_api_key_here

# Phone Bridge Configuration (for local SMS - replaces Telnyx)
# Methods: manual (copy-to-clipboard), phonelink (Windows Phone Link), api (custom app), kdeconnect (Linux), adb (Android Debug)
PHONE_BRIDGE_METHOD=manual
PHONE_DEVICE_ID=your_kdeconnect_device_id_here
PHONE_API_URL=http://localhost:8080
PHONE_API_KEY=your_phone_api_key_here
PHONE_LINK_URL=http://localhost:9002

# Microsoft Outlook Integration (for email - replaces SMTP)
OUTLOOK_CLIENT_ID=your_outlook_client_id_here
OUTLOOK_CLIENT_SECRET=your_outlook_client_secret_here
OUTLOOK_TENANT_ID=common
OUTLOOK_REDIRECT_URI=http://localhost:3000/api/v1/auth/outlook/callback

# Google Contacts Integration (for patient contact sync)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:3000/api/v1/auth/google/callback
