#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Run lint-staged
npx lint-staged

# Check for console.log statements (skip desktop/, tests/, and portal pages)
echo "ğŸ” Checking for console.log statements..."
if git diff --cached --name-only | grep -E '\.(js|jsx|ts|tsx)$' | grep -v -E '(desktop/|tests/|__tests__/|\.test\.|portal/)' | xargs grep -n "console\.\(log\|warn\|error\|debug\)" 2>/dev/null; then
  echo "âŒ Found console statements. Please use logger instead."
  echo "   Use: import logger from './utils/logger.js'; logger.info(...)"
  exit 1
fi

# Check for TODO without JIRA ticket
echo "ğŸ” Checking for untracked TODOs..."
if git diff --cached --name-only | grep -E '\.(js|jsx|ts|tsx)$' | xargs grep -n "TODO" | grep -v "TODO\[" 2>/dev/null; then
  echo "âš ï¸  Found TODOs without ticket reference. Format: TODO[JIRA-123]: description"
fi

# Check for sensitive data patterns
echo "ğŸ” Checking for potential secrets..."
if git diff --cached --name-only | xargs grep -E "(password|secret|api_key|private_key|token)\s*=\s*['\"]" 2>/dev/null; then
  echo "âŒ Potential secrets found in staged files!"
  exit 1
fi

echo "âœ… Pre-commit checks passed!"
