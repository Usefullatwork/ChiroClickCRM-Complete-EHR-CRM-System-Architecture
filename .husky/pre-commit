#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Run lint-staged
npx lint-staged

# Check for console.log statements in staged files
# - Only checks console.log (console.warn/error are allowed per ESLint config)
# - Skips test files, portal, database, migrations, and logger utility
# - Skips files with /* eslint-disable no-console */ (explicitly opted out)
echo "ğŸ” Checking for console.log statements..."
STAGED_JS=$(git diff --cached --name-only | grep -E '\.(js|jsx|ts|tsx)$' | grep -v -E '(desktop/|tests/|__tests__/|\.test\.|portal/|database/|migrations/|utils/logger\.js|public/|scripts/)')
if [ -n "$STAGED_JS" ]; then
  # Filter out files that have eslint-disable no-console
  FILES_TO_CHECK=""
  for f in $STAGED_JS; do
    if [ -f "$f" ] && ! grep -q "eslint-disable.*no-console" "$f" 2>/dev/null; then
      FILES_TO_CHECK="$FILES_TO_CHECK $f"
    fi
  done
  if [ -n "$FILES_TO_CHECK" ] && echo "$FILES_TO_CHECK" | xargs grep -n "console\.log" 2>/dev/null; then
    echo "âŒ Found console.log statements. Please use logger instead."
    echo "   Use: import logger from './utils/logger.js'; logger.info(...)"
    exit 1
  fi
fi

# Check for TODO without JIRA ticket
echo "ğŸ” Checking for untracked TODOs..."
if git diff --cached --name-only | grep -E '\.(js|jsx|ts|tsx)$' | xargs grep -n "TODO" | grep -v "TODO\[" 2>/dev/null; then
  echo "âš ï¸  Found TODOs without ticket reference. Format: TODO[JIRA-123]: description"
fi

# Check for sensitive data patterns
echo "ğŸ” Checking for potential secrets..."
if git diff --cached --name-only | xargs grep -E "(password|secret|api_key|private_key|token)\s*=\s*['\"]" 2>/dev/null; then
  echo "âŒ Potential secrets found in staged files!"
  exit 1
fi

echo "âœ… Pre-commit checks passed!"
