{
  "name": "chiroclickcrm-desktop",
  "version": "2.0.0",
  "description": "ChiroClickCRM Desktop - Standalone EHR-CRM for Chiropractors",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "no.chiroclick.crm",
    "productName": "ChiroClickCRM",
    "directories": {
      "output": "../release"
    },
    "files": [
      "**/*",
      "../backend/**/*",
      "../frontend/dist/**/*",
      "!../backend/node_modules/.cache",
      "!../**/tests/**",
      "!../**/*.test.js"
    ],
    "win": {
      "target": "portable",
      "icon": "icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "icon.png"
    },
    "extraResources": [
      {
        "from": "../data",
        "to": "data",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}
